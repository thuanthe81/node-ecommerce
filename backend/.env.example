# Application
PORT=3001
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:3000

# Uploads
# Directory to serve static files (absolute or relative to project root)
UPLOAD_DIR=uploads

# Security - CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
# Connection string format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/handmade_ecommerce

# Database Connection Pool (optional - Prisma manages this automatically)
# For production, consider using PgBouncer or connection pooling at infrastructure level
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
# Generate a strong key for production using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-change-in-production

SMTP_PASSWORD=

# OAuth - Google
# REQUIRED: OAuth 2.0 credentials from Google Cloud Console
# Setup instructions: See OAUTH_SETUP.md in project root
# Get credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:3001/auth/google/callback
# 3. Copy Client ID and Client Secret below
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# OAuth - Facebook
# REQUIRED: OAuth credentials from Facebook Developers
# Setup instructions: See OAUTH_SETUP.md in project root
# Get credentials from: https://developers.facebook.com/apps/
# 1. Create a new app or select existing
# 2. Add Facebook Login product
# 3. Configure Valid OAuth Redirect URIs: http://localhost:3001/auth/facebook/callback
# 4. Copy App ID and App Secret below
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/auth/facebook/callback

# IMPORTANT: The application will not start without valid OAuth credentials.
# See OAUTH_SETUP.md for complete setup instructions.

# PDF Image Optimization
# Configuration for aggressive image optimization in PDF generation
# These settings control how images are processed to minimize PDF file sizes

# Aggressive Mode Settings
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_MAX_WIDTH=300
IMAGE_MAX_HEIGHT=300
IMAGE_MIN_WIDTH=50
IMAGE_MIN_HEIGHT=50
IMAGE_FORCE_OPTIMIZATION=true

# Quality Settings - JPEG
IMAGE_JPEG_QUALITY=60
IMAGE_JPEG_MIN_QUALITY=40
IMAGE_JPEG_MAX_QUALITY=75

# Quality Settings - PNG
IMAGE_PNG_QUALITY=65
IMAGE_PNG_MIN_QUALITY=50
IMAGE_PNG_MAX_QUALITY=80

# Quality Settings - WebP
IMAGE_WEBP_QUALITY=65
IMAGE_WEBP_MIN_QUALITY=45
IMAGE_WEBP_MAX_QUALITY=80

# Compression Settings
IMAGE_COMPRESSION_ENABLED=true
IMAGE_COMPRESSION_LEVEL=maximum
IMAGE_ENABLE_FORMAT_CONVERSION=true
IMAGE_PREFERRED_FORMAT=jpeg

# Fallback Settings
IMAGE_FALLBACK_ENABLED=true
IMAGE_OPTIMIZATION_RETRIES=3
IMAGE_OPTIMIZATION_TIMEOUT=10000

# Monitoring Settings
IMAGE_MONITORING_ENABLED=true
IMAGE_TRACK_PROCESSING_TIME=true
IMAGE_TRACK_COMPRESSION_RATIO=true
IMAGE_TRACK_SIZE_REDUCTION=true

# Content-Aware Optimization
IMAGE_CONTENT_AWARE_ENABLED=true
IMAGE_TEXT_QUALITY=70
IMAGE_PHOTO_QUALITY=55
IMAGE_GRAPHICS_QUALITY=65
IMAGE_LOGO_QUALITY=75