{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "build:low-cpu": "NODE_OPTIONS='--max-old-space-size=1024 --max-semi-space-size=64' next build --webpack",
    "build:minimal": "NODE_OPTIONS='--max-old-space-size=512 --max-semi-space-size=32' NEXT_TELEMETRY_DISABLED=1 next build --webpack",
    "build:ultra-low": "NODE_OPTIONS='--max-old-space-size=384 --max-semi-space-size=16 --gc-interval=100' NEXT_TELEMETRY_DISABLED=1 UV_THREADPOOL_SIZE=1 next build --webpack",
    "build:single-thread": "NODE_OPTIONS='--max-old-space-size=256' NEXT_TELEMETRY_DISABLED=1 UV_THREADPOOL_SIZE=1 next build --webpack",
    "start": "next start",
    "start:standalone": "node start-standalone.js",
    "lint": "eslint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@alacraft/shared": "file:../shared",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@types/quill": "^2.0.14",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "next": "16.0.1",
    "next-intl": "^4.5.0",
    "quill": "^2.0.3",
    "quill-image-resize-module-react": "^3.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "react-quilljs": "^2.0.5",
    "swr": "^2.3.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "baseline-browser-mapping": "^2.9.11",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "fast-check": "^3.23.2",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  }
}
